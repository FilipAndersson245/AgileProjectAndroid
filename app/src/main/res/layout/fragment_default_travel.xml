<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".Fragments.DefaultTravelFragment"
              android:orientation="vertical"
              android:padding="10dp"
              android:background="#fcfcfc">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:orientation="horizontal">
        <android.support.v7.widget.AppCompatImageView
                android:layout_marginLeft="120dp"
                android:layout_width="130dp"
                android:layout_height="44dp"
                android:background="@drawable/kapscharrow"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

        <TextView
                android:layout_width="9dp"
                android:textColor="#000000"
                android:layout_height="match_parent"
                android:layout_marginLeft="52dp"
                android:layout_marginTop="10dp"
                android:textSize="22dp"
                android:text="You are now in travel mode"
                android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
                android:clickable="true"
                android:id="@+id/Register"
                android:layout_width="400dp"
                android:layout_marginTop="0dp"
                android:layout_height="300dp">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/TextViewCord"
                        android:layout_width="9dp"
                        android:textColor="#000000"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="62dp"
                        android:layout_marginTop="10dp"
                        android:textSize="17dp"
                        android:text="Cordinates: "
                        android:textStyle="italic"
                        android:layout_weight="1"/>

                <TextView
                        android:id="@+id/coordinatesText"
                        android:layout_width="9dp"
                        android:textColor="#000000"
                        android:layout_height="match_parent"
                        android:layout_marginRight="160dp"
                        android:layout_marginTop="10dp"
                        android:textSize="18dp"
                        android:text="xx.xxx.xx"
                        android:textStyle="italic"
                        android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/TextViewGantry"
                        android:layout_width="9dp"
                        android:textColor="#000000"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="62dp"
                        android:layout_marginTop="10dp"
                        android:textSize="17dp"
                        android:text="Closest gantry: "
                        android:textStyle="italic"
                        android:layout_weight="1"/>

                <TextView
                        android:id="@+id/distanceText"
                        android:layout_width="9dp"
                        android:textColor="#000000"
                        android:layout_height="match_parent"
                        android:layout_marginRight="100dp"
                        android:layout_marginTop="10dp"
                        android:textSize="18dp"
                        android:text="xxx meters"
                        android:textStyle="italic"
                        android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:orientation="horizontal">

                <Button
                        android:text="Show map"
                        android:textColor="@color/KapschOrange"
                        android:background="#000000"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="60dp"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content" android:id="@+id/buttonShowMap"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="149dp"
                    android:orientation="horizontal">

                <Button
                        android:text="Stop travel"
                        android:textColor="@color/KapschOrange"
                        android:background="#000000"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="60dp"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content" android:id="@+id/buttonStopTravel"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>

