<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="You have no passed gantries."
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/no_invoices_message"
        android:gravity="center" android:visibility="gone"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gantry_list"
        android:name="se.ju.agileandroidproject.GantryFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        tools:context=".Fragments.PassageFragment"
        tools:listitem="@layout/gantry_list_item"/>
</LinearLayout>
